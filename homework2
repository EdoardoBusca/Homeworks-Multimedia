            flex-direction: column;
            align-items: center;
            background-color: #f0f0f0;
            margin-top: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        #board {
            display: flex;
            flex-direction: column;
            gap: 5px;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            gap: 5px;
        }

        .cell {
            width: 50px;
            height: 50px;
            border: 2px solid #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
            background-color: white;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
            transition: 0.3s;
        }

        #inputArea {
            margin-bottom: 10px;
        }

        input {
            padding: 10px;
            font-size: 16px;
            text-transform: uppercase;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #333;
            color: white;
            border: none;
        }

        button:hover {
            background-color: #555;
        }

        #newGameBtn {
            display: none;
            background-color: green;
            margin-top: 10px;
        }

